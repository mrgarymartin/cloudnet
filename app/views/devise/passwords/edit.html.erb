<% title "Change Password" %>

<div class="container">
  <div class="pure-g">
    <div class="pure-u-1">
      <%= devise_error_messages! %>
    </div>
  </div>
  <div class="pure-g">
    <div class="pure-u-1-4"></div>
    <div class="pure-u-1-2">

      <div id="jg-registration-widget" class="pure-g sessions">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "pure-u-1 form-devise", :role => "form" }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <header class="session-logo pure-u-1">
            <%= link_to ENV['BRAND_NAME'], root_path, { class: "pure-u-1", id: 'logoLarge'} %>
          </header>

          <dl>
            <dt class="jg-icon icon-user pure-u-1-8"></dt>
            <dd class="pure-u-7-8"><%= f.password_field :password, :autofocus => true, :class => "form-control", :placeholder => "New Password" %></dd>
          </dl>
          <dl>
            <dt class="jg-icon icon-locked pure-u-1-8"></dt>
            <dd class="pure-u-7-8"><%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password Confirmation" %></dd>
          </dl>
          <dl>
            <dd id="session-action" class="pure-u-1-1"><%= f.button "Change my password", {id: 'session-button', :class => "btn btn-lg btn-primary btn-block jg-submit-button"} %></dd>
          </dl>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
<script>ga('send', 'event', 'Page', 'View', 'Forgotten Password Change');</script>