<div id="links">
  <ul id="links_shared">

  <%- if devise_mapping.registerable? && controller_name == 'registrations' %>
    <li>
      By signing up, you agree to the 
      <a href="https://help.cloud.net/hc/en-us/articles/200691841-Terms-of-Service"
       target="_blank">
      Terms of Service</a>
    </li>
  <% end -%>

  <%- if controller_name != 'sessions' %>
  	<li>
  		<%= link_to "Sign in", new_session_path(resource_name), class: "jg-icon icon-user" %>
  	</li>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <li>
    	<%= link_to "Sign up", new_registration_path(resource_name), class: "jg-icon icon-user-add" %>
    </li>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <li>
    	<%= link_to "Forgot your password?", new_password_path(resource_name), class: "jg-icon icon-key" %>
    </li>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  	<li>
    		<%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "jg-icon icon-quill" %>
    	</li>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  	<li>
    		<%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "jg-icon icon-unlocked" %>
    	</li>
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
    	<li>
      	<%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
      </li>
    <% end -%>
  <% end -%>
  </ul>
</div>
